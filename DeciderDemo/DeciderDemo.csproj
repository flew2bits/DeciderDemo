      <PackageReference Include="Scrutor" Version="4.2.0" />
      <PackageReference Include="System.Linq.Async" Version="6.0.1" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Pages\IndexConferenceHandlers.cs">
